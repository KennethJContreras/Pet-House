---
interface Props {
	titulo: string;
	descripcion: string;
	imagenSrc: string;
}

const { titulo, descripcion, imagenSrc } = Astro.props;
---

<section>
	<div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 md:py-12 lg:px-8 lg:pb-5">
	  <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
	  <div class="relative h-64 overflow-hidden rounded-lg sm:h-80 lg:order-last lg:h-full">
		<img
		alt=""
		src={imagenSrc}
		class="absolute inset-0 h-full w-full object-cover"
		/>
	  </div>
	
	  <div class="lg:py-24">
		<h2 class="text-3xl font-bold sm:text-4xl">{titulo}</h2>
	
		<p class="mt-4 text-gray-600">
			{descripcion}
		</p>
	  </div>
	  </div>
	</div>
  </section>
  
<style>
</style>
