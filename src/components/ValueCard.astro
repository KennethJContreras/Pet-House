---
interface Props {
  valor: string;
  descripcion: string;
}

const { valor, descripcion} = Astro.props;
---


<div class="relative mb-8 flex flex-col rounded-2xl border border-solid border-black p-8 [box-shadow:rgb(0,_0,_0)_9px_9px] lg:mb-4">

    <p class="mb-4 text-xl font-semibold">{valor}</p>
    <p>{descripcion}</p>
  </div>