---
interface Props {
  titulo: string;
  descripcion: string;
}

const { titulo, descripcion} = Astro.props;
---

<div class="mx-auto flex max-w-xl flex-col items-center py-10 justify-center px-6 text-center lg:max-w-3xl lg:px-10">
    <h1 class="mx-auto text-center font-bold text-black lg: text-3xl lg:text-4xl">{titulo}</h1>
    <p class="font-inter mt-4 max-w-xl px-5 text-center text-base font-light text-gray-500 lg:max-w-lg">{descripcion}</p>
</div>