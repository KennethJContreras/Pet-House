---
import Base from "../../layouts/Base.astro";
import NoveltyCard from "../../components/NoveltyCard.astro";
import Title from "../../components/Title.astro";

interface Novelty {
  titulo: string;
  descripcion: string;
  imagen: string;
  fecha: string;
  href: string;
}
const noveltyCards: Novelty[] = [
  {
    titulo: "Filtros de Búsqueda Mejorados",
    descripcion: "Hemos mejorado nuestros filtros de búsqueda para ayudarte a encontrar la mascota perfecta de manera más rápida y precisa. Ahora puedes filtrar por características más detalladas como nivel de energía y necesidades especiales.",
    imagen: "/images/novedades/gestion.jpg",
    fecha: "20 de mayo de 2024",
    href: "filtros-de-busqueda"
  },
  {
    titulo: "Mensajería Segura con Envío de Imágenes y Ubicaciones",
    descripcion: "Ahora nuestra plataforma de mensajería permite el envío seguro de mensajes, imágenes, stickers y ubicaciones, mejorando la comunicación entre adoptantes y dueños de mascotas.",
    imagen: "/images/novedades/mensajeria.avif",
    fecha: "15 de mayo de 2024",
    href: "mensajeria-segura"
  },
  {
    titulo: "Perfiles Mejorados para Mascotas en Adopción",
    descripcion: "Los perfiles de mascotas ahora incluyen más detalles, como historial de salud y comportamiento. Esta mejora ayuda a los adoptantes a tomar decisiones más informadas al seleccionar una mascota.",
    imagen: "/images/novedades/historia-destacada.webp",
    fecha: "10 de mayo de 2024",
    href: "perfiles-mejorados"
  },
  {
    titulo: "Mejoras en la Seguridad de Datos de Usuarios",
    descripcion: "Hemos mejorado nuestras políticas de seguridad para garantizar la confidencialidad y protección de los datos de todos los usuarios en nuestra plataforma.",
    imagen: "/images/novedades/confidencialidad.jfif",
    fecha: "20 de mayo de 2024",
    href: "seguridad-de-datos"
  },
  {
    titulo: "Actualización en la Gestión de Historias",
    descripcion: "Ofrecemos un espacio renovado para compartir historias de adopción, motivando a más personas a adoptar y compartir sus experiencias.",
    imagen: "/images/novedades/actualizacion.webp",
    fecha: "5 de abril de 2024",
    href: "gestion-de-historias"
  },
  {
    titulo: "Publicación de Historias de Adopción Destacadas",
    descripcion: "Hemos lanzado una nueva sección donde los adoptantes pueden compartir sus historias de adopción. Estas historias inspiradoras se mostrarán en la parte superior basadas en la interacción de los usuarios.",
    imagen: "/images/novedades/destacado.webp",
    fecha: "30 de abril de 2024",
    href: "adopciones-destacadas"
  },
];
---

<Base title="Novedades">
  <section>
    <!-- Container -->
    <div class="mx-auto w-full max-w-7xl px-5 md:px-10">
      <!-- Component -->
      <div class="flex flex-col items-center">
        <!-- Heading Div -->
        <Title titulo="Lo Más Nuevo" descripcion="" />
        <!-- Blog Div -->
        <div
          class="mb-6 grid grid-cols-1 justify-items-center gap-8 sm:justify-items-stretch md:mb-10 md:grid-cols-3 md:gap-4 lg:mb-12"
        >
          <!-- Novedades -->
          {
            noveltyCards.map((novelty) => (
              <NoveltyCard
                titulo={novelty.titulo}
                descripcion={novelty.descripcion}
                fechaLanzamiento= {novelty.fecha}
                imagenSrc= {novelty.imagen}
                href= {novelty.href}
              />
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Base>
